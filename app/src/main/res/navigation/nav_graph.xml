<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="br.com.mfdesenvilvimento.driven_by_purpose.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_systematic_theology" >
        <action
            android:id="@+id/action_mainFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
        <action
            android:id="@+id/action_mainFragment_to_apiFragment"
            app:destination="@id/apiFragment" />

    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="br.com.mfdesenvilvimento.driven_by_purpose.core.notification.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" >
        <action
            android:id="@+id/action_notificationFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/apiFragment"
        android:name="br.com.mfdesenvilvimento.driven_by_purpose.ui.ApiFragment"
        android:label="fragment_api"
        tools:layout="@layout/fragment_api" >
        <action
            android:id="@+id/action_apiFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>